{
  "name": "eleventy-blog-starter",
  "version": "1.0.0",
  "description": "A blog template using the Eleventy site generator.",
  "type": "module",
  "scripts": {
    "dev": "npx @11ty/eleventy --serve --port 3000 && npx tailwindcss -i ./src/css/styles.css -o ./public/style.out.css --watch",
    "build": "npm @11ty/eleventy && npm tailwindcss -i ./src/css/styles.css -o ./style.out.css --minify"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.0",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/markdown-it": "^14.1.2",
    "cross-env": "^7.0.3",
    "luxon": "^3.6.1",
    "tailwindcss": "^4.1.8",
    "zod": "^3.25.43",
    "zod-validation-error": "^3.4.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "dependencies": {
    "@astrojs/netlify": "^6.3.4",
    "markdown-it": "^14.1.0"
  }
}